{
    "Default": {
        "headless": true,
        "autoClose": false,
        "args": [
            "--host-resolver-rules=MAP localhost 127.0.0.1",
            "--no-sandbox",
            "--disable-dev-shm-usage"
        ],
        "ignoreHTTPSErrors": true
    },
    "Scraper-light": {
        "headless": true,
        "autoClose": false,
        "args": [
            "--host-resolver-rules=MAP localhost 127.0.0.1",
            "--disable-gpu",
            "--no-sandbox",
            "--disable-dev-shm-usage",
            "--disable-setuid-sandbox"
        ],
        "ignoreHTTPSErrors": true
    },
    "Scraper-spa": {
        "headless": true,
        "autoClose": false,
        "args": [
            "--host-resolver-rules=MAP localhost 127.0.0.1",
            "--disable-gpu",
            "--no-sandbox",
            "--disable-setuid-sandbox",
            "--disable-dev-shm-usage",
            "--single-process",
            "--disable-background-networking",
            "--disable-background-timer-throttling"
        ],
        "ignoreHTTPSErrors": true
    },
    "Incognito": {
        "headless": true,
        "autoClose": false,
        "args": [
            "--host-resolver-rules=MAP localhost 127.0.0.1",
            "--no-sandbox",
            "--disable-setuid-sandbox",
            "--incognito",
            "--disable-web-security",
            "--disable-features=IsolateOrigins,site-per-process",
            "--no-referrers"
        ],
        "ignoreHTTPSErrors": true
    }
}